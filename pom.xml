		<sourceDirectory>src/com/neophob</sourceDirectory>
		<outputDirectory>bin/com/neophob</outputDirectory>
		<plugins>
		
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			
			<!-- Package all files together -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
  				<version>2.2.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>assembly</goal>
						</goals>
						<configuration>
							<finalName>
								${project.artifactId}-${project.version}
							</finalName>
							<!-- 
								<appendAssembly>false</appendAssembly>
							-->
							<outputDirectory>
								${project.build.directory}
							</outputDirectory>
							<descriptors>
								<descriptor>
									${basedir}/src/build/assembly.xml
								</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<!-- This plugin provides the capability to build and sign jars. -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.1</version>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<archive>
						<manifestEntries>
							<Main-Class>
								com.neophob.PixelController
							</Main-Class>
							<Built-By>${user.name}</Built-By>
							<Built-With>
								Java ${java.version} (${java.vendor})
							</Built-With>
							<Specification-Title>
								${project.name}
							</Specification-Title>
							<Specification-Version>
								${project.currentVersion}
							</Specification-Version>
							<Specification-Vendor>
								${project.organization.name}
							</Specification-Vendor>
							<Implementation-Title>
								${project.name}
							</Implementation-Title>
							<Implementation-Version>
								${project.version}
							</Implementation-Version>
							<Implementation-Vendor>
								${project.organization.name}
							</Implementation-Vendor>
							<Implementation-Vendor-Id>
								neophob.com
							</Implementation-Vendor-Id>
						</manifestEntries>
					</archive>
					<forceCreation>true</forceCreation>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.9.0</version>
				<configuration>
					<header>src/build/header.txt</header>
				</configuration>
			</plugin>
			
		</plugins>
	</build>
	
	<properties>
		<sonar.dynamicAnalysis>false</sonar.dynamicAnalysis>
		<sonar.phase>generate-sources</sonar.phase>
		
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>		
	</properties>
	

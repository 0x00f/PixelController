		<sourceDirectory>src/com/neophob</sourceDirectory>
		<outputDirectory>bin/com/neophob</outputDirectory>
		<plugins>
		
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			
			<!-- Package all files together -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
  				<version>2.2.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>assembly</goal>
						</goals>
						<configuration>
							<finalName>
 								${project.artifactId}-${project.version}
							</finalName>
							<!-- 
								<appendAssembly>false</appendAssembly>
							-->
							<outputDirectory>
								${project.build.directory}
							</outputDirectory>
							<descriptors>
								<descriptor>
									${basedir}/src/build/assembly.xml
								</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.9.0</version>
				<configuration>
					<header>src/build/header.txt</header>
				</configuration>
			</plugin>
			
			<!-- Build classpath strings to insert into scripts -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
 				<version>2.3</version>
				<executions>
					<execution>
						<id>build-classpath-win</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>build-classpath</goal>
						</goals>
						<configuration>
							<prefix>lib\</prefix>
							<fileSeparator>\</fileSeparator>
							<pathSeparator>;</pathSeparator>
							<outputFilterFile>true</outputFilterFile>
							<outputFile>
								${project.build.directory}/${project.artifactId}-${project.version}-distribution/${project.artifactId}-${project.version}/classpath-win.properties
							</outputFile>
							<excludeGroupIds>
								junit
							</excludeGroupIds>
						</configuration>
					</execution>
  
					<execution>
						<id>build-classpath-unix</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>build-classpath</goal>
						</goals>
						<configuration>
							<prefix>lib</prefix>
							<fileSeparator>/</fileSeparator>
							<pathSeparator>:</pathSeparator>
							<outputFilterFile>true</outputFilterFile>
							<outputFile>
								${project.build.directory}/${project.artifactId}-${project.version}-distribution/${project.artifactId}-${project.version}/classpath-unix.properties
							</outputFile>
							<excludeGroupIds>
								junit
							</excludeGroupIds>						
						</configuration>
					</execution>
				
				</executions>
			</plugin>			
			
		</plugins>
	</build>
	
